{
  "name": "@jfa.dev/web",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "oxlint --type-aware && astro build",
    "cf-typegen": "wrangler types",
    "check": "oxlint --fix --type-aware && tsgo --noEmit",
