{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "insertFinalNewline": true,
  "experimentalSortPackageJson": {
    "sortScripts": true
  },
  "experimentalSortImports": {
    "order": "asc",
    "newlinesBetween": true
  },
  "ignorePatterns": [
    "cloudflare-env.d.ts",
    "worker-configuration.d.ts",
    ".wrangler/",
    "node_modules/"
  ]
}
