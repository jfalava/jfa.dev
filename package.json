{
  "name": "@jfa.dev/monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "web/*",
      "function/*"
    ],
    "catalogs": {
      "cloudflare": {
        "@cloudflare/vite-plugin": "1.25.0",
        "@cloudflare/workers-types": "^4.20260212.0"
      },
      "styling": {
        "tailwindcss": "^4.1.18",
        "@tailwindcss/vite": "4.1.18"
      },
      "backend": {
        "hono": "4.11.9"
      },
      "react-ui": {
