{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "insertFinalNewline": true,
  "experimentalSortPackageJson": {
    "sortScripts": true
  },
  "ignorePatterns": ["node_modules/**", "bun.lock"]
}
